@model IEnumerable<BRWebApp.Models.ProductInfo>

@{
    ViewData["Title"] = "AllProducts";
}
<h1 class="text-center">All Ice Creams</h1>
<div class="row" style="margin-bottom:50px;">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card w-100">
                <center>
                    <img src="~/uploads/@item.ProductID@item.ExtName" alt="" style="width:100%">
                </center>
                <div class="card-body">
                    <h5 class="card-text">
                        @item.ProductTitle
                    </h5>
                    <a class="btn btn-primary btn-block" asp-action="ViewDetails" asp-route-id="@item.ProductID">View Details</a>
                </div>

            </div>
        </div>
    }
</div>